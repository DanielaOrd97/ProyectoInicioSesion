                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Red"></Setter>
                                        </Trigger>
                                        <DataTrigger Binding="{Binding EstaConectado}" 
                                     Value="True">
                                            <Setter Property="Visibility"
                                    Value="Collapsed">
