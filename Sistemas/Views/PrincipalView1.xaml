                           </Trigger>
                        </Style.Triggers>
                    </Style>
                </Hyperlink.Style>
                
                </Hyperlink>
            </TextBlock>
            
            <Button Width="50" HorizontalAlignment="Right"
                Margin="5,5,15,5" 
                Background="Transparent"
                BorderThickness="0"
                Click="Button_Click"
                    Name="btnOff"
                >


                <Button.Template>
                    <ControlTemplate>
                        <Border Width="50" Height="50"
                            CornerRadius="23"
                            >
                            <f:ImageAwesome Width="25" Icon="Solid_PowerOff"></f:ImageAwesome>

                            <Border.Style>
